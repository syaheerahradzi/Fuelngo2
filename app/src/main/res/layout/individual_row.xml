<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="11dp"
            android:text="title"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/title"
            android:text="description" />

        <TextView
            android:id="@+id/address"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/location"
            android:text="address" />

        <TextView
            android:id="@+id/location"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/description"
            android:text="location" />

        <TextView
            android:id="@+id/endd"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="End date"
            android:layout_below="@+id/address"
            android:layout_toRightOf="@+id/startd"
            android:layout_toEndOf="@+id/startd" />

        <TextView
            android:id="@+id/startt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/endd"
            android:text="Start time" />

        <TextView
            android:id="@+id/startd"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/startt"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Start date" />

        <TextView
            android:id="@+id/endt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/endd"
            android:layout_toEndOf="@+id/startt"
            android:layout_toRightOf="@+id/startt"
            android:text="End time" />


    </RelativeLayout>

</android.support.v7.widget.CardView>